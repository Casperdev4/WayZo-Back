{% extends 'base.html.twig' %}

{% block title %}Connexion - XRide{% endblock %}

{% block body %}
<div class="form-container">
    <h2>Connexion</h2>

    {% if error %}
        <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post" action="{{ path('app_login') }}">
        <input type="email" name="_username" value="{{ last_username|default('') }}" required autofocus placeholder="Email">
        <input type="password" name="_password" required placeholder="Mot de passe">
        <button type="submit">Se connecter</button>
    </form>

    <p>Vous n'avez pas de compte ? <a href="{{ path('app_register') }}">Inscription</a></p>
</div>
{% endblock %}
